<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imgUserProfileBack"
            android:layout_width="28dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back2" />
        <com.example.chat.CricleImage
            android:id="@+id/imgUserProfileAvt"
            android:layout_width="228dp"
            android:layout_height="228dp"
            android:src="@drawable/ic_exp_avt"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/imgUserProfileChangeProfile"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_edit"
            android:layout_marginTop="248dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Họ và tên:"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tvUserProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Nguyễn Văn A"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Ngày sinh:"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/tvUserProfileBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="10/11/2000"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Địa chỉ: "
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tvUserProfileAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Phú Nhuận,HCM"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#78A6C8">
        <ImageView
            android:id="@+id/idUserProfileChatLight"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/ic_chat_light"/>
        <ImageView
            android:id="@+id/idUserProfileContactLight"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_friends_light"
            />
        <ImageView
            android:id="@+id/idPersonSolid"
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_person_solid"
            />
    </LinearLayout>
</LinearLayout>
