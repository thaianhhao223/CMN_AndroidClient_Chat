<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mint_green"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="248dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="365dp"
            android:layout_height="86dp"
            android:text="Vui lòng xác nhận email đã đăng kí để kích hoạt tài khoản!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btnSelectSignUp"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/botron_button"
                android:text="Hoàn tất"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#78A6C8"/>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/btnResendEmail"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/botron_button"
                android:text="Gửi lại"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="#78A6C8" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBackScreenSignUpStep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Quay lại"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>