<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/black"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:gravity="left">

            <com.example.chat.CricleImage
                android:id="@+id/imgItemListRequestAva"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20sp"
                android:src="@drawable/ic_exp_avt" />

            <TextView
                android:id="@+id/tvItemListRequestName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="Họ và tên"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imgViewItemListRequestAccept"
                android:layout_width="47dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_accept" />

            <ImageView
                android:id="@+id/imgViewItemListRequestDeny"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>