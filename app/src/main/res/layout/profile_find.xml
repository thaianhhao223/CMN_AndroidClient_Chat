<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#78A6C8"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgViewprofilfindBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/white">

        <com.example.chat.CricleImage
            android:id="@+id/imgprofilefindAvtperson"
            android:layout_width="228dp"
            android:layout_height="228dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_solid" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Họ và tên:"
                android:textSize="28dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tvprofilefindName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Nguyễn Văn A"
                android:textSize="28dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Ngày sinh:"
                android:textSize="28dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tvprofilefindBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="10/11/2000"
                android:textSize="28dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Địa chỉ: "
                android:textSize="28dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tvprofilefindAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="Phú Nhuận,HCM"
                android:textSize="28dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>
            <Button
                android:id="@+id/btnprofilefindAddFr"
                android:layout_width="184dp"
                android:layout_height="60dp"
                app:backgroundTint="#78A6C8"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Kết bạn" />
</LinearLayout>
