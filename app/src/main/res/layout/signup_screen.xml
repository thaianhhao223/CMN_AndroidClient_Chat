<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mint_green"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="248dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/edtEmailSignUp"
            android:layout_width="322dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="@color/hintTextColor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtPassSignUp"
            android:layout_width="324dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#BDB8B8"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtComfirmPassSignUp"
            android:layout_width="324dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint=" Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/hintTextColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSignUpComfirm"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="Đăng kí"
            android:textColor="@color/black"
            app:backgroundTint="#78A6C8"
            android:background="@drawable/botron_button"/>

        <TextView
            android:id="@+id/tvBackScreenSignUpStep1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Quay lại"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>