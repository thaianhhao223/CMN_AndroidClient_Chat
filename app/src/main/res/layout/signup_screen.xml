<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mint_green"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="248dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtEmailSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginLeft="5dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="@color/hintTextColor"
                android:textStyle="normal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtPassSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginLeft="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#BDB8B8"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtComfirmPassSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginLeft="5dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/hintTextColor"
                android:textStyle="normal" />
        </LinearLayout>
        <Button
            android:id="@+id/btnSignUpComfirm"
            android:layout_width="148dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Đăng kí"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="#78A6C8"
            android:background="@drawable/botron_button"/>

        <TextView
            android:id="@+id/tvBackScreenSignUpStep1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Quay lại"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>