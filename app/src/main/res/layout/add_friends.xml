<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#78A6C8"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgViewFindPersonBack"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="Thêm bạn"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="458dp"
        android:layout_margin="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="320dp"
            android:layout_height="79dp"
            android:text="Thêm bạn bằng số điện thoại"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtFindpersonbyphonenumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bodersolid1px"
            android:ems="10"
            android:hint="Nhập số điện thoại"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/hintTextColor" />

        <Button
            android:id="@+id/btnFindPerson"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/botron_button"
            android:text="Tìm kiếm"
            android:textColor="@color/black"
            app:backgroundTint="#639C9C" />

    </LinearLayout>

</LinearLayout>