<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#78A6C8"
        android:padding="10dp">

        <SearchView
            android:layout_width="354dp"
            android:layout_height="match_parent">
        </SearchView>

        <ImageView
            android:id="@+id/imgAuthOption"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Tạo nhóm mới +"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvChatRoom"
            android:layout_width="match_parent"
            android:layout_height="602dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#78A6C8"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/idChatLight"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/ic_chat_solid" />

        <ImageView
            android:id="@+id/imgViewManagerConversationContactregular"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_friends_light" />

        <ImageView
            android:id="@+id/idManagerConversationPersonLight"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_person_light" />
    </LinearLayout>
</LinearLayout>
