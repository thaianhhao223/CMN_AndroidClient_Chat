<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mint_green"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="367dp"
            android:layout_height="158dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtFullNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Họ và tên "
                android:layout_marginLeft="5dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/hintTextColor"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtBirthdaySignUP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginLeft="5dp"
                android:hint="Ngày sinh"
                android:inputType="date"
                android:textColor="@color/black"
                android:textColorHint="@color/hintTextColor"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtPhoneNumberLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginLeft="5dp"
                android:hint=" Số điện thoại"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/hintTextColor"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/shape"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtAddressSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Địa chỉ"
                android:layout_marginLeft="5dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/hintTextColor"
                android:textStyle="normal" />
        </LinearLayout>
        <Button
            android:id="@+id/btnComfirmInforUser"
            android:layout_width="148dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/botron_button"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:backgroundTint="#78A6C8" />

        <TextView
            android:id="@+id/tvBackScreenSignUpStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Quay lại"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>