<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mint_green"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="367dp"
            android:layout_height="158dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/edtFullNameSignUp"
            android:layout_width="324dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint=" Họ và tên "
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/hintTextColor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtBirthdaySignUP"
            android:layout_width="324dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint=" Ngày sinh"
            android:inputType="date"
            android:textColor="@color/black"
            android:textColorHint="@color/hintTextColor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtPhoneNumberLogin"
            android:layout_width="324dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="Số điện thoại"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/hintTextColor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtAddressSignUp"
            android:layout_width="324dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="Địa chỉ"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/hintTextColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnComfirmInforUser"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/botron_button"
            android:text="Xác nhận"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:backgroundTint="#78A6C8" />

        <TextView
            android:id="@+id/tvBackScreenSignUpStep2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Quay lại"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>