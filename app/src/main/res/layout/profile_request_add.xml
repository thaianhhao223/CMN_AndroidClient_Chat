<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/imgProfileRequestAddFriendBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <com.example.chat.CricleImage
            android:id="@+id/imgProfileRequestAddFriendAvt"
            android:layout_width="228dp"
            android:layout_height="228dp"
            android:src="@drawable/ic_exp_avt"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Họ và tên:"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvProfileRequestAddFriendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Nguyễn Văn A"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Ngày sinh:"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvProfileRequestAddFriendBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="10/11/2000"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Địa chỉ: "
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvProfileRequestAddFriendAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Phú Nhuận,HCM"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/btnProfileRequestAddFriendAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#78A6C8">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="124dp"
                android:layout_height="60dp"
                android:background="#78A6C8"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:text="Chấp nhận" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnProfileRequestAddFriendDeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#78A6C8"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_refuse"
                android:layout_marginLeft="10dp"/>
        <Button
            android:layout_width="124dp"
            android:layout_height="60dp"
            android:background="#78A6C8"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:text="Từ chối" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
