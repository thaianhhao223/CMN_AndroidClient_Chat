<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#78A6C8"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgViewInforApplicationBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:text="Thông tin ứng dụng"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:background="#FFFFFF"
            android:foregroundGravity="center"
            android:src="@drawable/ic_infor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tvInforApp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Thông tin về phần mềm"
            android:layout_marginBottom="200dp"
            android:textSize="28dp"
            />
    </LinearLayout>
</LinearLayout>
